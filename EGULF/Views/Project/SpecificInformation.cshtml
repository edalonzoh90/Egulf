<div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <label class="control-label" for="">@projectLanguageUI.LabelDynamicPositioningSystem</label>
    <button class="btn-primary" data-content="@projectLanguageUI.TooltipDynamicPositioningSystem" data-trigger="focus" role="button" type="button" data-toggle="popover" data-placement="bottom">
        <i class="fa fa-info-circle"></i>
    </button>  
    <div class="form-check">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
            <div class="radio radio-primary form-check-inline">
                <input type="radio" class="form-control" id="DPSRequired" name="DPS" value="1" style="display:inline !important;width:auto !important;" />
                <label for="DPSRequired">@projectLanguageUI.OptionRequired</label>
            </div>
            <div class="radio radio-primary form-check-inline">
                <input type="radio" class="form-control" id="DPSNoRequired" name="DPS" value="0" style="display:inline !important;width:auto !important;" checked />
                <label for="DPSNoRequired">@projectLanguageUI.OptionNoRequired</label>
            </div>
        </div>
    </div>
    <div class="form-check" id="DPOptions" style="display:none;">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="radio radio-primary form-check-inline">
                <input type="radio" class="form-control" id="DP1" name="DynamicPositionSystem" value="1" style="display:inline !important;width:auto !important;" checked />
                <label for="DP1">@projectLanguageUI.OptionDP1</label>
            </div>
            <div class="radio radio-primary form-check-inline">
                <input type="radio" class="form-control" id="DP2" name="DynamicPositionSystem" value="2" style="display:inline !important;width:auto !important;" />
                <label for="DP2">@projectLanguageUI.OptionDP2</label>
            </div>
            <div class="radio radio-primary form-check-inline">
                <input type="radio" class="form-control" id="DP3" name="DynamicPositionSystem" value="3" style="display:inline !important;width:auto !important;" />
                <label for="DP3">@projectLanguageUI.OptionDP3</label>
            </div>
        </div>
    </div>
</div>


