@model EGullf.Services.Models.Operation.ProjectModel

@using projectLanguageUI = EGULF.App_LocalResources.Project
@using messageLanguageUI = EGULF.App_LocalResources.MessageUI

@Html.HiddenFor(m => m.ProjectId)
<div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <label class="control-label" for="FreeDeckArea">@projectLanguageUI.LabelFreeDeckArea</label>
    <div class="input-group">
        @Html.TextBoxFor(m => m.FreeDeckArea, "{0:n2}", new
   {
       @class = "form-control",
       @id = "FreeDeckArea",
       @name = "FreeDeckArea",
       @type = "number",
       @value = "0",
       @step = ".05",
       @min = 1
   })
        <span class="input-group-addon bootstrap-touchspin-postfix">@projectLanguageUI.PlaceholderM2</span>
        <button class="input-group-addon bg-primary text-white" data-content="@projectLanguageUI.TooltipSquareMeters" data-toggle="popover" data-placement="bottom" data-trigger="focus" role="button" type="button">
            <i class="fa fa-info-circle"></i>
        </button>
    </div>
</div>

