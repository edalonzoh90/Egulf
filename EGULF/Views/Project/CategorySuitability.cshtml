@model EGullf.Services.Models.Operation.ProjectModel
@using projectLanguageUI = EGULF.App_LocalResources.Project

@Html.HiddenFor(m => m.ProjectId)
<div id="IsTowageContainer" class="form-row">
    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <label class="control-label">@projectLanguageUI.LabelSubtype</label>
        <div class="form-check">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="radio radio-primary form-check-inline">
                    <input type="radio" id="ConventionalTug" name="TugType" value="1" />
                    <label for="ConventionalTug">@projectLanguageUI.OptionConventionalTug</label>
                </div>
            </div>      
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="radio radio-primary form-check-inline">
                    <input type="radio" id="SternDriveTug" name="TugType" value="2" />
                    <label for="SternDriveTug">@projectLanguageUI.OptionSternDriveTug</label>
                </div>
            </div>      
        </div>
    </div>

    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <label class="control-label" for="BollardPull">@projectLanguageUI.LabelBollardPull</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.BollardPull, new
       {
           @class = "form-control",
           @id = "BollardPull",
           @name = "BollardPull",
           @type = "number",
           @step = ".05",
           @min = 1
       })
            <span class="input-group-addon bootstrap-touchspin-postfix">@projectLanguageUI.PlaceholderTonnes</span>
            <button class="input-group-addon bg-primary text-white" data-content="@projectLanguageUI.TooltipBollarPull" data-toggle="popover" data-placement="bottom" data-trigger="focus" role="button" type="button">
                <i class="fa fa-info-circle"></i>
            </button>
        </div>
    </div>

    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <label class="control-label" for="BollardPullAhead">@projectLanguageUI.LabelBollardPullAhead</label>
