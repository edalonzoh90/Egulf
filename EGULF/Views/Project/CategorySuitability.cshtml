           @type = "number",
           @step = ".05",
           @min = 1
       })
            <span class="input-group-addon bootstrap-touchspin-postfix">@projectLanguageUI.PlaceholderTonnes</span>
            <button class="input-group-addon bg-primary text-white" data-content="@projectLanguageUI.TooltipBollarPull" data-toggle="popover" data-placement="bottom" data-trigger="focus" role="button" type="button">
                <i class="fa fa-info-circle"></i>
            </button>
        </div>
    </div>

