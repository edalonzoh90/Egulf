@using localResources = EGULF.App_LocalResources.Example
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script>
    var urlBase = '@Url.Content("~/")';
</script>
<script src="~/Scripts/Example/Notification.js"></script>

<div id="Notification">
    <div class="portlet light bordered" style="display:block">
        <div class="portlet-title">
            <div class="caption font-blue-sharp">
                <div style="display:inline-block">
                    <span class="label label-success bg-green-jungle bg-font-green-jungle"><label id="lblTitle">Ofertas</label>&nbsp;</span> Ofertas
                </div>
            </div>

            <div class="actions">
                <div class="btn-group">
                    <button type="button" class="btn btn-default" style="margin-right: 0px;" onclick="Notification.TransactionOffer('offer')" title="Nuevo" data-original-title=""><i class="fa fa-eraser"></i> Ofertar</button>
                    <button type="button" class="btn btn-default" style="margin-right: 0px;" onclick="Notification.TransactionOffer('accept')" title="Nuevo" data-original-title=""><i class="fa fa-eraser"></i> Aceptar oferta</button>
                </div>
            </div>
        </div>
        <div class=""></div>
    </div>

    <div class="portlet light bg-grey-cararra bordered">
        <div class="portlet-body">
            <form id="NotificationBusquedaForm">
                <div id="form" class="row sidebar-search">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 form-group">
                                <label class='control-label'>@Html.Raw(localResources.NotificationId)</label>
                                <input id="NotificationId" name="NotificationId" type="text" class="form-control txtFiltro  Notification" />
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 form-group">
                                <label class='control-label'>@Html.Raw(localResources.Type)</label>
                                <input id="Type" name="Type" type="text" class="form-control txtFiltro  Notification" />
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 form-group">
                                <label class='control-label'>@Html.Raw(localResources.Date)</label>
                                <input id="Date" name="Date" type="text" class="form-control txtFiltro date Notification" />
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 form-group">
                                <label class='control-label'>@Html.Raw(localResources.Description)</label>
                                <input id="Description" name="Description" type="text" class="form-control txtFiltro  Notification" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 form-group">
                                <label class='control-label'>@Html.Raw(localResources.Status)</label>
                                <input id="Status" name="Status" type="text" class="form-control txtFiltro  Notification" />
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 form-group">
                                <label class='control-label'>@Html.Raw(localResources.SourceId)</label>
                                <input id="SourceId" name="SourceId" type="text" class="form-control txtFiltro  Notification" />
                            </div>
                        </div>
                        <div class="row">
                        </div>

                        <div class="row">
                            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 form-group">
                                <br class="hidden-xs" />
                                <button type="button" onclick="$('#gridNotification').DataTable().draw();" class="btn green-seagreen">
                                    <i class="icon-magnifier"></i> Buscar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="portlet light bordered" style="display:block">
        <div class="portlet-title">
            <div class="caption font-blue-sharp">
                <div style="display:inline-block">
                    <span class="label label-success bg-green-jungle bg-font-green-jungle"><label id="lblTitle">Nuevo</label>&nbsp;</span> Notification
                </div>
            </div>

            <div class="actions">
                <div class="btn-group">
                    <button type="button" class="btn btn-default" style="margin-right: 0px;" onclick="Notification.LimpiarFormulario()" title="Nuevo" data-original-title="Limpiar formulario"><i class="fa fa-eraser"></i> Limpiar</button>
                    <button type="button" class="btn btn-default" style="margin-right: 0px;" onclick="Notification.Transaction('ADD')" title="Guardar" data-original-title="Guardar"><i class="fa fa-floppy-o"></i> Guardar</button>
                    <button type="button" class="btn btn-default" style="margin-right: 0px;" onclick="Notification.CerrarEdicion()" title="Cerrar" data-original-title="Cerrar"><i class="fa fa-close"></i> Cerrar</button>
                    <button type="button" class="btn btn-default" style="margin-right: 0px;" onclick="Notification.Alert()" title="Alert" data-original-title="Alert"><i class="fa fa-info"></i> Alert</button>
                    <button type="button" class="btn btn-default" style="margin-right: 0px;" onclick="Notification.Upload()"><i class="fa fa-cloud"></i> To Azure</button>
                    <a href="/Example/GetFile"> from azure </a>
                </div>
            </div>
        </div>
        <div class="portlet-body">
            <form id="NotificationForm">
                <input id="File" type="file" />
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="portlet box cs-dark">
                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-list"></i>Notification</div>
                    <div class="actions">
                        <a href="javascript: Notification.Nuevo();" class="add Notification btn btn-default btn-sm tooltips " data-placement="left" title="Nuevo">
                            <i class="fa fa-plus"></i> Agregar
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table id="gridNotification" class="table table-striped table-bordered table-hover order-column display responsive nowrap" cellspacing="0" width="100%">
                        <tr>
                            <th>@Html.Raw(localResources.NotificationId)</th>
                            <th>@Html.Raw(localResources.Type)</th>
                            <th>@Html.Raw(localResources.Date)</th>
                            <th>@Html.Raw(localResources.Description)</th>
                            <th>@Html.Raw(localResources.Status)</th>
                            <th>@Html.Raw(localResources.SourceId)</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
