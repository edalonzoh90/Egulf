@model EGullf.Services.Models.Operation.VesselCostModel

@using globalResource = EGULF.App_LocalResources.Main
@using localResource = EGULF.App_LocalResources.Vessels

@using (Html.BeginForm("Create", "Vessel", FormMethod.Post,
                              new { @id = "CreateVesselCost", @role = "form", @data_toggle = "validator" }))
{
    @Html.HiddenFor(m => m.VesselId)
    <div class="card-box">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-xl-12">
                <div class="form-group">
                    @Html.Label(localResource.LodgingCost, new { @class = "control-label" })
