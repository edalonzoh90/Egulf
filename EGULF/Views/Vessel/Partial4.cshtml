                        <span class="input-group-addon bootstrap-touchspin-postfix">$</span>
                        @Html.TextBoxFor(m => m.LodgingCost, new { @class = "form-control", @type = "number", @min = "1", @step = "0.01" })
                        <span class="input-group-addon bootstrap-touchspin-postfix">USD/PAX/día</span>
                    </div>
                    <div class="help-block with-errors"></div>
                </div>
            </div>
