@using messagesUI = EGULF.App_LocalResources.MessageUI
@using profileLanguageUI = EGULF.App_LocalResources.Profile
@using singupLanguageUI = EGULF.App_LocalResources.SingUp
@model EGullf.Services.Models.Management.UserPersonModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">

    <!-- FORM SECTION -->
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
        <div class="card-box">

            <div class="portlet">
                <div class="portlet-heading portlet-default">
                    <h3 class="portlet-title text-dark">@profileLanguageUI.SubtitleUserInfo</h3>
                    <div class="portlet-widgets">
                        <button id="btnEditProfile" class="btn btn-icon waves-effect btn-sm btn-primary">
                            <i class="fa fa-edit"></i>
                            <span>@messagesUI.ButtonTextEdit</span>
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="portlet-body">
                    <form id="ProfileForm" data-toggle="validator" role="form" class="floating-labels">

                        <div class="form-row">
                            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 m-r-15">
                                <div class="form-group">
                                    <div class="thumb-xl member-thumb m-b-10 center-block">
                                        <img src="@Url.Content("~/Content/Images/avatar.png")" id="ProfileImage" class="rounded-circle img-thumbnail" alt="profile-image">
                                    </div>
                                    <div id="ProfileImageOptions" class="text-center" style="display:none;">
                                        <button id="btnRemoveProfileImage" class="btn btn-sm btn-icon waves-effect btn-danger" value="">
                                            <i class="fa fa-remove"></i>
                                        </button>
                                        <div class="fileupload btn btn-sm btn-icon waves-effect btn-primary">
                                            <span><i class="fa fa-camera-retro"></i></span>
                                            <input type="file" class="upload" id="ProfileImageFile">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
                                <div>
                                    <div class="form-group floating-labels">
                                        <span class=""><i class="mdi mdi-account"></i></span>
                                        <label for="FirstName">@profileLanguageUI.LabelFirstName</label>
                                        <input id="FirstName" placeholder="" class="form-control floating-labels" type="text" required="required" readonly autocomplete="off">
                                    </div>
                                    <div class="form-group floating-labels">
                                        <span class=""><i class="mdi mdi-account"></i></span>
                                        <label for="LastName">@profileLanguageUI.LabelLastName</label>
                                        <input id="LastName" placeholder="" class="form-control floating-labels" type="text" readonly autocomplete="off">
                                    </div>
                                    <div class="form-group floating-labels">
                                        <span class=""><i class="mdi mdi-briefcase"></i></span>
                                        <label for="CompanyName">@profileLanguageUI.LabelCompanyName</label>
                                        <input id="CompanyName" placeholder="" class="form-control floating-labels" type="text" readonly autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row m-t-20" id="EditDetailSection">
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group floating-labels">
                                    <span class=""><i class="mdi mdi-email"></i></span>
                                    <label>@profileLanguageUI.LabelEmail</label>
                                    @Html.TextBoxFor(m => m.Email, new
                               {
                                   @type = "email",
                                   @id = "Email",
                                   @class = "form-control floating-labels",
                                   @name = "Email",
                                   @required = "required",
                                   @readonly = "readonly",
                                   @autocomplete = "off",
                                   @data_error = @profileLanguageUI.MsgWrongEmail,
                                   @data_remote = @Url.Content("~/SingUp/ValidateEmail"),
                                   @data_remote_error = @singupLanguageUI.MsgEmailExisting,
                               })
                                    @*<input id="Email" 
                                           placeholder="" 
                                           data-error="@profileLanguageUI.MsgWrongEmail" 
                                           class="form-control floating-labels" 
                                           type="email" 
                                           required="required" 
                                           readonly autocomplete="off">*@
                                    <div class="help-block with-errors" style="color:red !important;"></div>
                                </div>
                                <div class="form-group floating-labels">
                                    <span class=""><i class="mdi mdi-phone"></i></span>
                                    <label>@profileLanguageUI.LabelPhoneNumber</label>
                                    <input id="PhoneNumber" placeholder="" class="form-control floating-labels" type="tel" readonly autocomplete="off">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group floating-labels">
                                    <span class=""><i class="mdi mdi-account"></i></span>
                                    <label>@profileLanguageUI.LabelUsername</label>
                                    <input id="Username" placeholder="" class="form-control floating-labels" type="text" readonly autocomplete="off">
                                </div>
                                <div class="form-group floating-labels">
                                    <span class=""><i class="mdi mdi-skype"></i></span>
                                    <label>@profileLanguageUI.LabelSkype</label>
                                    <input id="Skype" placeholder="" class="form-control floating-labels" type="text" readonly autocomplete="off">
                                </div>
                            </div>
                        </div>

                        <div class="form-row m-t-20 text-right" id="EditButtonsSection" style="display:none !important;">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    <button id="btnCancelProfile" type="button" class="btn btn-icon btn-default waves-effect waves-light">
                                        <i class="fa fa-ban"></i>
                                        <span>@messagesUI.ButtonTextCancel</span>
                                    </button>
                                    <button id="btnSaveProfile" type="submit" class="btn btn-icon btn-primary waves-effect waves-light">
                                        <i class="fa fa-floppy-o"></i>
                                        <span>@messagesUI.ButtonTextSave</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <!-- END FORM SECTION -->


    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
        <div class="card-box">

            <div class="portlet">
                <div class="portlet-heading portlet-default">
                    <h3 class="portlet-title text-dark">@profileLanguageUI.SubtitleUpdatePassword</h3>
                    <div class="portlet-widgets">
                        <button id="btnChangePassword" class="btn btn-icon waves-effect btn-sm btn-primary">
                            <i class="fa fa-edit"></i>
                            <span>@messagesUI.ButtonTextChange</span>
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="portlet-body">
                    <form id="PasswordForm" data-toggle="validator" role="form">
                        <div class="form-row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    <span class=""><i class="mdi mdi-key"></i></span>
                                    <label>@profileLanguageUI.LabelPassword</label>
                                    <input placeholder="" id="Password" class="form-control" type="password" required="required" disabled autocomplete="off">
                                </div>

                                <div class="form-group">
                                    <span class=""><i class="mdi mdi-key"></i></span>
                                    <label>@profileLanguageUI.LabelNewPassword</label>
                                    <input placeholder="" id="NewPassword" class="form-control" type="password" required="required" disabled autocomplete="off">
                                </div>

                                <div class="form-group">
                                    <span class=""><i class="mdi mdi-key"></i></span>
                                    <label>@profileLanguageUI.LabelRepeatPassword</label>
                                    <input id="RepeatPassword" placeholder="" data-error="@profileLanguageUI.MsgWrongPassword" data-match="#NewPassword" class="form-control" type="password" required="required" disabled autocomplete="off">
                                    <div class="help-block with-errors" style="color:red !important;"></div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row m-t-20 text-right" id="EditPasswordSection" style="display:none;">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    <button id="btnCancelPassword" type="button" class="btn btn-icon btn-default waves-effect waves-light">
                                        <i class="fa fa-ban"></i>
                                        <span>@messagesUI.ButtonTextCancel</span>
                                    </button>
                                    <button id="btnSavePassword" type="submit" class="btn btn-icon btn-primary waves-effect waves-light">
                                        <i class="fa fa-floppy-o"></i>
                                        <span>@messagesUI.ButtonTextSave</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>   

</div>

<script>
    var UIMessages = [
            {"type":"success","subject":'@messagesUI.ToastSubjectSuccess',"message":'@messagesUI.MsgSuccess' },
            {"type":"error","subject":'@messagesUI.ToastSubjectError',"message":'@messagesUI.MsgError'},
            {"type":"warning","subject":'@messagesUI.ToastSubjectWarning',"message":'@profileLanguageUI.MsgWrongImageFormat'}
    ];
    var UIConfirmationSweet = {
        "type": "info",
        "subject": "@messagesUI.SweetConfirmation",
        "message": "@messagesUI.MsgConfirmationUpdate",
        "btnConfirmText": "@messagesUI.ButtonTextUpdate",
        "btnCancelText":"@messagesUI.ButtonTextCancel"
    };

    var UserId = @ViewBag.UserId;
    var SessionUserId = @ViewBag.SessionUserId;
    var _urlCntrlProfile = '@Url.Content("~/Profile/")';
</script>
<script src="~/Scripts/Views/ProfileScript.js"></script>