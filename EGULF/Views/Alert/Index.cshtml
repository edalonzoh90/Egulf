@using localresource = EGULF.App_LocalResources.Alert;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title"> !Notificaciones </h4>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="card-box">
    <div class="row">
        <div class="col-md-12">
            <table id="tblNotifications" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>@Html.Raw(localresource.Status)</th>
                        <th>@Html.Raw(localresource.TimeAgo)</th>
                        <th>@Html.Raw(localresource.Body)</th>
                    </tr>
                </thead>
                <tbody style="font-size: 14px;"></tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/Views/Alert.js"></script>
<script>
    $(document).ready(function () {
        Base.call(Alert);
        Alert.permissions.canCreate = false;
        Alert.vars.tags={
            MarkAsReaded:  '@Html.Raw(localresource.MarkAsReaded)',
            Nuevo:  '@Html.Raw(localresource.Visto)',
            Visto:  '@Html.Raw(localresource.Nuevo)'
        }
        Alert.Init();
    });

</script>

